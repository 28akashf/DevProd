@{
    ViewData["Title"] = "Modify Metrics";
}

@model DevProdWebApp.Models.ToolMetric

<div class="container">
    <h1>@ViewData["Title"]</h1>
    <div class="row">

        <div class="col-md-4">
            <div class="row input-field">
                <input id="metricName" type="text" value="@Model.Name" />
                <label for="metricName">Metric</label>
            </div>
            <div class="row input-field">
                <input id="weight" type="text" value="@Model.Weight"/>
                <label for="weight">Weight</label>
            </div>
            <div class="row input-field">
                <a class="waves-effect waves-light btn" onclick="editMetric(@Model.Id)">Edit Metric</a>
            </div>



        </div>
        <div class="col-md-2">
        </div>
        <div class="col-md-4">
            <div class="row">
                <div class="col-md-12">

                    <div class="file-field input-field">
                        <div class="btn">
                            <span>Upload File</span>
                            <input type="file">
                        </div>
                        <div class="file-path-wrapper">
                            <input class="file-path validate" type="text">
                        </div>
                    </div>

                </div>
            </div>
            <div class="row input-field">
                <a class="waves-effect waves-light btn" onclick="uploadMetric()">Upload Metric</a>
            </div>
        </div>
        <div class="col-md-2">
        </div>
    </div>
