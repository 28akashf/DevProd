@{
    ViewData["Title"] = "Tool";
}
@model DevProdWebApp.ViewModels.MList;
<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4"> <h2 class="grey-text text-darken-1"> Dashboard</h2></div>
    </div>
    <div class="row">     
            <div class="col-md-9">
            <div class="card darken-1">
                <div class="card-content">
                    <span class="card-title">Data</span>

                   
               
                <div class="row">

                     <div class="col-md-12">
                    <ul class="tabs">

                        <li class="tab col-md-5"><a class="active" href="#test1">Raw</a></li>
                        <li class="tab col-md-5"><a href="#test2">Processed</a></li>
                    </ul>
                     </div>
                <div id="test1" class="col-md-12">

                    <table class="responsive-table striped">
                      <thead>
                            <tr>
                               @foreach (var key in Model.metricDictionary.Keys)
                                {
                                    <th>
                                          @key
                                    </th>      
                                }
                            </tr>
                      </thead>
                       <tbody> 
                         
                                @for (int i = 0; i < Model.maxCount; i++)
                                {
                                <tr>
                                    @foreach (var key in Model.metricDictionary.Keys)
                                    {
                                       
                                            @try
                                            {
                                            <td>
                                                @Model.metricDictionary[key][i].Value
                                            </td>
                                            }
                                            catch(Exception ex)
                                            {
                                                
                                            }
                                          
                                    
                                    }
                                </tr>
                                }
                         
                         

                        
                           
                        
                    </table>

                </div>
                <div id="test2" class="col-md-12">
                    <table class="responsive-table striped">
                        <thead>
                            <tr>
                                @foreach (var key in Model.metricProcDictionary.Keys)
                                {
                                    <th>
                                        @key
                                    </th>
                                }
                            </tr>
                        </thead>
                        <tbody>

                            @for (int i = 0; i < Model.maxCount; i++)
                            {
                                <tr>
                                    @foreach (var key in Model.metricProcDictionary.Keys)
                                    {

                                        @try
                                        {
                                            <td>
                                                @Model.metricProcDictionary[key][i].Value
                                            </td>
                                        }
                                        catch (Exception ex)
                                        {

                                        }


                                    }
                                </tr>
                            }




                    </table>
                </div>
                </div>
                </div>

            </div>
            </div>
           
               
       
        <div class="col-md-3">

            <div class="row">
                <div class="col s12 m6">
                    <div class="card blue-grey darken-1">
                        <div class="card-content white-text">
                            <span class="card-title">Productivity Score</span>
                         
                            <h1>@Model.score</h1>
                        </div>

                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col s12 m6">
                    <div class="card orange darken-3">
                        <div class="card-content white-text">
                            <span class="card-title">Settings</span>

                            <a class="waves-effect waves-light btn" asp-controller="Home" asp-action="ToolSettings"><i class="material-icons center white-text">build</i></a>
                        </div>

                    </div>
                </div>
             
                
            </div>
            
        </div>
    
    </div>
</div>
<script type="text/javascript">

    function settings() {
        alert("click...");
        $.ajax({
            type: "POST",
            url: '@Url.Action("ToolSettings", "Home")',
            data: {},
            success: function (response) {


            },
            error: function (xhr, status, error) {

            }
        });

    }

    document.addEventListener('DOMContentLoaded', function () {
  
        var tabs = document.querySelectorAll('.tabs');
        var taboptions = document.querySelectorAll('li');
    
        var instance = M.Tabs.init(tabs, taboptions);
    });
</script>