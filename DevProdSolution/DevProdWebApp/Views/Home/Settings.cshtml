@{
    ViewData["Title"] = "Settings";
}

@model DevProdWebApp.ViewModels.MetricList
<h1>@ViewData["Title"]</h1>

<p>Add Metrics for performance evaluation</p>

Metric : <input type="text"/>
Weight : <input type="text" />
<a class="btn btn-primary" href="@Url.Action("GetBugs","Home")">Add Metric</a>


<p>Currently selected Performance Metrics</p>
@foreach(var x in Model.MetricSet)
{
    <div>@x.Name  @x.Weight</div>
}
